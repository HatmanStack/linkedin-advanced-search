# AWS Cognito Configuration
# Copy this file to .env.local and fill in your AWS Cognito details

# AWS Region where your Cognito User Pool is located
VITE_AWS_REGION=us-east-1

# Your Cognito User Pool ID (found in AWS Console > Cognito > User Pools)
VITE_COGNITO_USER_POOL_ID=us-east-1_xxxxxxxxx

# Your Cognito User Pool Web Client ID (found in User Pool > App Integration > App Clients)
VITE_COGNITO_USER_POOL_WEB_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxx

# Optional: Identity Pool ID (only needed if using AWS services that require authenticated access)
VITE_COGNITO_IDENTITY_POOL_ID=us-east-1:xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# API Gateway Configuration
# Your API Gateway URL for DynamoDB operations
# VITE_API_GATEWAY_URL=https://your-api-id.execute-api.us-east-1.amazonaws.com/prod
VITE_API_GATEWAY_URL=http://localhost:3001

# =============================================================================
# LINKEDIN INTERACTION SYSTEM CONFIGURATION
# =============================================================================

# Session Management
# How long a LinkedIn browser session stays active (milliseconds)
LINKEDIN_SESSION_TIMEOUT=3600000

# How often to check session health (milliseconds)
SESSION_HEALTH_CHECK_INTERVAL=300000

# Maximum errors before session recovery
MAX_SESSION_ERRORS=5

# Timeout for session recovery operations
SESSION_RECOVERY_TIMEOUT=60000

# Concurrency Control
# Maximum number of simultaneous LinkedIn interactions
MAX_CONCURRENT_INTERACTIONS=3

# Maximum number of browser sessions (should be 1 for LinkedIn)
MAX_CONCURRENT_SESSIONS=1

# Size of interaction queue
INTERACTION_QUEUE_SIZE=50

# Rate Limiting
# Time window for rate limiting (milliseconds)
RATE_LIMIT_WINDOW=60000

# Maximum interactions per rate limit window
RATE_LIMIT_MAX=10

# Daily interaction limit per user
DAILY_INTERACTION_LIMIT=500

# Hourly interaction limit per user
HOURLY_INTERACTION_LIMIT=100

# Retry Configuration
# Number of retry attempts for failed operations
INTERACTION_RETRY_ATTEMPTS=3

# Base delay between retries (milliseconds)
INTERACTION_RETRY_BASE_DELAY=1000

# Maximum delay between retries (milliseconds)
INTERACTION_RETRY_MAX_DELAY=300000

# Jitter factor for retry delays (0.0 to 1.0)
RETRY_JITTER_FACTOR=0.1

# Human Behavior Simulation
# Minimum delay between human-like actions (milliseconds)
HUMAN_DELAY_MIN=1000

# Maximum delay between human-like actions (milliseconds)
HUMAN_DELAY_MAX=3000

# Maximum actions per minute to simulate human behavior
ACTIONS_PER_MINUTE=8

# Maximum actions per hour to simulate human behavior
ACTIONS_PER_HOUR=100

# Typing Simulation
# Minimum typing speed (WPM equivalent in milliseconds)
TYPING_SPEED_MIN=80

# Maximum typing speed (WPM equivalent in milliseconds)
TYPING_SPEED_MAX=150

# Chance of typing pause (0.0 to 1.0)
TYPING_PAUSE_CHANCE=0.1

# Minimum typing pause duration (milliseconds)
TYPING_PAUSE_MIN=500

# Maximum typing pause duration (milliseconds)
TYPING_PAUSE_MAX=2000

# Mouse and Scroll Simulation
# Number of steps for mouse movement animation
MOUSE_MOVEMENT_STEPS=5

# Delay between mouse movement steps (milliseconds)
MOUSE_MOVEMENT_DELAY=100

# Scroll step size in pixels
SCROLL_STEP_SIZE=120

# Delay between scroll steps (milliseconds)
SCROLL_DELAY=200

# Suspicious Activity Detection
# Number of rapid actions that trigger suspicious activity detection
SUSPICIOUS_ACTIVITY_THRESHOLD=3

# Time window for suspicious activity detection (milliseconds)
SUSPICIOUS_ACTIVITY_WINDOW=300000

# Minimum cooldown duration when suspicious activity detected (milliseconds)
COOLDOWN_MIN_DURATION=30000

# Maximum cooldown duration when suspicious activity detected (milliseconds)
COOLDOWN_MAX_DURATION=300000

# Operation Timeouts
# Timeout for LinkedIn page navigation (milliseconds)
LINKEDIN_NAVIGATION_TIMEOUT=30000

# Timeout for waiting for page elements (milliseconds)
ELEMENT_WAIT_TIMEOUT=10000

# Timeout for message composition (milliseconds)
MESSAGE_COMPOSE_TIMEOUT=15000

# Timeout for post creation (milliseconds)
POST_CREATION_TIMEOUT=20000

# Timeout for connection requests (milliseconds)
CONNECTION_REQUEST_TIMEOUT=15000

# Content Limits
# Maximum length for LinkedIn messages
MAX_MESSAGE_LENGTH=8000

# Maximum length for LinkedIn posts
MAX_POST_LENGTH=3000

# Maximum length for connection request messages
MAX_CONNECTION_MESSAGE_LENGTH=300

# Browser Configuration
# Timeout for browser launch (milliseconds)
BROWSER_LAUNCH_TIMEOUT=30000

# Timeout for page loading (milliseconds)
PAGE_LOAD_TIMEOUT=30000

# How long browser can be idle before cleanup (milliseconds)
BROWSER_IDLE_TIMEOUT=1800000

# Error Handling
# Maximum consecutive errors before stopping
MAX_CONSECUTIVE_ERRORS=5

# Cooldown duration after errors (milliseconds)
ERROR_COOLDOWN_DURATION=60000

# Monitoring and Logging
# Enable performance logging (true/false)
PERFORMANCE_LOGGING_ENABLED=false

# Enable audit logging (true/false)
AUDIT_LOGGING_ENABLED=true

# How often to collect metrics (milliseconds)
METRICS_COLLECTION_INTERVAL=60000

# Feature Flags
# Enable message sending functionality (true/false)
ENABLE_MESSAGE_SENDING=true

# Enable connection request functionality (true/false)
ENABLE_CONNECTION_REQUESTS=true

# Enable post creation functionality (true/false)
ENABLE_POST_CREATION=true

# Enable human behavior simulation (true/false)
ENABLE_HUMAN_BEHAVIOR=true

# Enable suspicious activity detection (true/false)
ENABLE_SUSPICIOUS_ACTIVITY_DETECTION=true

# Development/Debug Settings
# Enable debug mode for LinkedIn interactions (true/false)
LINKEDIN_DEBUG_MODE=false

# Take screenshots on errors (true/false)
SCREENSHOT_ON_ERROR=false

# Save page source on errors (true/false)
SAVE_PAGE_SOURCE_ON_ERROR=false

# Enable verbose logging (true/false)
VERBOSE_LOGGING=false

# =============================================================================
# EXISTING CONFIGURATION (Keep these as they were)
# =============================================================================

# Server Configuration
PORT=3001
NODE_ENV=development

# Frontend URLs for CORS
FRONTEND_URLS=http://localhost:3000,http://localhost:5173

# LinkedIn Search Configuration
RECENCY_HOURS=6
RECENCY_DAYS=5
RECENCY_WEEKS=3
HISTORY_TO_CHECK=4
THRESHOLD=8
PAGE_NUMBER_START=1
PAGE_NUMBER_END=100

# Google AI Configuration
GOOGLE_AI_API_KEY=your_google_ai_api_key_here

# Puppeteer Configuration
HEADLESS=true
SLOW_MO=50
VIEWPORT_WIDTH=1200
VIEWPORT_HEIGHT=1200

# Timeout Configuration
DEFAULT_TIMEOUT=30000
NAVIGATION_TIMEOUT=50000
LOGIN_SECURITY_TIMEOUT=0

# File Paths
SCREENSHOTS_DIR=./screenshots
LINKS_FILE=./data/possible-links.json
GOOD_CONNECTIONS_FILE=./data/good-connections-links.json

# Instructions:
# 1. Create a Cognito User Pool in AWS Console
# 2. Create an App Client (make sure to enable username/password auth)
# 3. Set up API Gateway with DynamoDB integration
# 4. Copy the User Pool ID, App Client ID, and API Gateway URL to the variables above
# 5. Rename this file to .env.local
# 6. Restart your development server

# Security Notes:
# - These are public environment variables (prefixed with VITE_)
# - They will be included in your built application
# - Do not include sensitive secrets here
# - User Pool Web Client should be configured for public clients (no client secret)
